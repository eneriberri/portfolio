<div class="row">
  <h1>Sign Up</h1>
  <div class="small-6 large-centered columns">
    <form action="users_url" method="post" accept-charset="utf-8" class="custom">
      <label for="phone_number">Phone Number</label>
      <input type="text" name="user[phone]" id="phone_number">
  
      <label for="location">Zip Code</label>
      <input type="text" name="user[zip_code]" id="location">
  
      <label for="birthday">Birthday</label>
      <input type="date" name="usern[birthday]" id="birthday">
  
      <label for="gender">Gender</label>
      <input type="radio" name="user[gender]" value="M" id="gender-m"><label for="gender-m">Male</label>
      <input type="radio" name="user[gender]" value="F" id="gender-f"><label for="gender-f">Female</label>
      <p></p>
      <p><input type="submit" value="Sign Up" class="button expand"></p>
    </form>
  </div>
</div>